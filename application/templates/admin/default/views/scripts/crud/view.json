    global $gANNOTATION_KEYS; 
    extract($gANNOTATION_KEYS);
    $entity = $this->entity;
    $data = array();
    foreach ($this->columns as $column_name => $def) {
        $anno = $def['annotations'];
        if (isset($anno[$a_col]) && isset($anno[$a_awe])) {
            $type = $anno[$a_col]->type;
            if ($type == 'datetime' || $type == 'date') {
                $data[$column_name] = $entity->$column_name->format('m/d/Y');
            } else {
                $data[$column_name] = $entity->$column_name;
            }
        }
    }
    $data['id'] = $entity->id;

    echo json_encode($data);
?>
